{
  "compilerOptions": {
      "moduleResolution": "node",
      "target": "es2018",
      "module": "commonjs",
      "lib": ["es2018", "dom"],
      "sourceMap": true,
      "skipLibCheck": true,
      "declaration": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "lib",
      "allowJs": true
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
