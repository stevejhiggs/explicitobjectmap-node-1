{
  "compilerOptions": {
      "moduleResolution": "node",
      "target": "es2020",
      "module": "commonjs",
      "lib": ["es2020", "dom"],
      "sourceMap": true,
      "skipLibCheck": true,
      "declaration": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": false,
      "outDir": "lib"
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
